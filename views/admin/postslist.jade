extends layout

block title
  title= '後臺管理'

block content
  a(href='/admin/new')= 'new post'
  a(href='/admin/logout')= 'logout'
  table
    tr
      th= 'id'
      th= 'title'
      th= 'time'
      th= 'private'
      th= 'clicks'
      th= 'tags'
    each post in posts
      tr
        td
          a(href='./edit/' + post.id)= post.id
        td
          a(href='../' + post.id)= post.title
        td= post.postTime
        td= post.private
        td= post.clicks
        td= post.tags
