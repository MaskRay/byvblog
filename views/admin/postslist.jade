extends layout

block title
  title= '後臺管理'

block content
  table.table
    tr
      th= 'Id'
      th= 'Title'
      th= 'Time'
      th= 'Private'
      th= 'Clicks'
      th= 'Tags'
    each post in posts
      tr
        td
          a(href='/admin/edit/' + post.id)= post.id
        td
          a(href='/' + post.id)= post.title
        td= dateFormat(post.postTime, 'yyyy-mm-dd HH:MM:ss')
        td= post.private
        td= post.clicks
        td= post.tags
